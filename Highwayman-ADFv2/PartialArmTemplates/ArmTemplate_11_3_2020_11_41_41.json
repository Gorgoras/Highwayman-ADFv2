{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "Highwayman-ADFv2"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/AzureBatch_test')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBatch",
				"typeProperties": {
					"accountName": "pruebatch",
					"accessKey": {
						"type": "SecureString",
						"value": "**********"
					},
					"batchUri": "https://pruebatch.westus2.batch.azure.com",
					"poolName": "asd",
					"linkedServiceName": {
						"referenceName": "Blob_brahminstorage",
						"type": "LinkedServiceReference"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/resizeAzureBachPool')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Rest Api resize",
						"type": "WebActivity",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"url": "https://pruebatch.westus2.batch.azure.com/pools/asd/resize?api-version=2020-09-01.12.0",
							"method": "POST",
							"headers": {
								"return-client-request-id": "True",
								"Content-Type": "application/json; odata=minimalmetadata"
							},
							"body": {
								"nodeDeallocationOption": "requeue",
								"targetDedicatedNodes": 0,
								"targetLowPriorityNodes": 0
							},
							"authentication": {
								"type": "MSI",
								"resource": "https://batch.core.windows.net/"
							}
						}
					}
				],
				"annotations": []
			},
			"dependsOn": []
		}
	]
}